<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/result_item_card"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:padding="4dp"
    android:layout_marginBottom="2dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="0dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/result_item_ic_transport_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:scaleType="center"
            android:padding="8dp"
            android:src="@drawable/ic_directions_bus_grey" />

        <TextView
            android:text="15"
            android:id="@+id/result_item_text_transport_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/result_item_ic_transport_type"
            android:layout_marginEnd="4dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:padding="8dp"
            android:paddingTop="10dp"
            android:minEms="2"
            android:gravity="center" />

        <TextView
            android:text="10:40 40:20 32:20"
            android:id="@+id/result_item_text_times"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/result_item_text_transport_number"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:padding="8dp"
            android:paddingTop="10dp"
            android:gravity="center" />
    </RelativeLayout>
</android.support.v7.widget.CardView>